# üîê Environment Variables Configuration
# Web3 Tor Browser - Production Environment

# ========================================
# üîë APPLICATION SECRETS
# ========================================
# CRITICAL: Generate strong, unique values for production!

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Encryption & Security Keys (MUST be 32 characters)
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-strong-jwt-secret-key-here

# TOR Control Password
TOR_CONTROL_PASSWORD=your-strong-tor-password-here

# ========================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ========================================

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-strong-mongodb-password-here
MONGODB_URL=mongodb://admin:your-strong-mongodb-password-here@mongodb:27017/web3tordb

# Redis Configuration
REDIS_URL=redis://redis:6379

# ========================================
# üìä MONITORING & ANALYTICS
# ========================================

# Grafana Configuration
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=your-strong-grafana-password-here

# Prometheus Configuration
PROMETHEUS_RETENTION=200h

# ========================================
# üåê WEB3 & BLOCKCHAIN SETTINGS
# ========================================

# Ethereum/Web3 Provider URLs
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
BSC_RPC_URL=https://bsc-dataseed1.binance.org/
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Web3 API Keys
INFURA_PROJECT_ID=your_infura_project_id_here
ALCHEMY_API_KEY=your_alchemy_api_key_here
MORALIS_API_KEY=your_moralis_api_key_here

# DeFi Protocol Settings
UNISWAP_V3_ROUTER=0xE592427A0AEce92De3Edee1F18E0157C05861564
AAVE_POOL_ADDRESS=0x87870Bca3F3fD6335C3F4ce8392D69350B4fA4E2

# ========================================
# üîí SECURITY SETTINGS
# ========================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_TIMEOUT=3600000
MAX_SESSIONS=50

# IP Whitelist (comma-separated)
IP_WHITELIST=127.0.0.1,::1

# CORS Settings
CORS_ORIGIN=https://your-domain.com

# ========================================
# üîß APPLICATION SETTINGS
# ========================================

# Node Environment
NODE_ENV=production
PORT=3000
BASE_URL=https://yourdomain.com

# Feature Flags
ENABLE_MONITORING=true
ENABLE_ANALYTICS=true
ENABLE_AI_FEATURES=true
ENABLE_PREMIUM_FEATURES=true
ENABLE_2FA=true
ENABLE_CSRF_PROTECTION=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Puppeteer –Ω–∞—Å—Ç—Ä–æ–π–∫–∏
PUPPETEER_SKIP_DOWNLOAD=false
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# ========================================
# üìß EMAIL & NOTIFICATIONS
# ========================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Notification Settings
NOTIFICATION_EMAIL=admin@your-domain.com
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ========================================
# üê≥ DOCKER CONFIGURATION
# ========================================

# Container Resources
DOCKER_CPU_LIMIT=2.0
DOCKER_MEMORY_LIMIT=4G
DOCKER_CPU_RESERVATION=1.0
DOCKER_MEMORY_RESERVATION=2G

# Network Configuration
DOCKER_NETWORK_SUBNET=172.20.0.0/16

# ========================================
# ‚òÅÔ∏è CLOUD PROVIDER SETTINGS
# ========================================

# AWS Configuration (if using AWS)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Google Cloud (if using GCP)
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_KEYFILE=path/to/keyfile.json

# Azure (if using Azure)
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key

# ========================================
# üîç OBSERVABILITY
# ========================================

# Jaeger Tracing
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=14268

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id

# New Relic APM
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=web3-tor-browser

# ========================================
# üîê SSL/TLS CERTIFICATES
# ========================================

# SSL Certificate Paths
SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
SSL_KEY_PATH=/etc/ssl/private/your-key.pem

# Let's Encrypt Settings
LETSENCRYPT_EMAIL=your-email@domain.com
LETSENCRYPT_DOMAINS=your-domain.com,www.your-domain.com

# ========================================
# üöÄ DEPLOYMENT SETTINGS
# ========================================

# Health Check URLs
HEALTH_CHECK_URL=http://localhost:3000/health
READINESS_CHECK_URL=http://localhost:3000/ready

# Scaling Configuration
MIN_REPLICAS=2
MAX_REPLICAS=10
TARGET_CPU_UTILIZATION=70

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ========================================
# üí≥ PAYMENT PROCESSING
# ========================================

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Cryptocurrency Payments
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_API_SECRET=your_coinbase_api_secret

# ========================================
# ü§ñ AI & MACHINE LEARNING
# ========================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google AI Platform
