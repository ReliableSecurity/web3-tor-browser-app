# Основные настройки
NODE_ENV=production
PORT=3000
BASE_URL=https://yourdomain.com

# Telegram Bot (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Puppeteer настройки
PUPPETEER_SKIP_DOWNLOAD=false
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Web3 настройки (опционально)
ETHEREUM_RPC=https://mainnet.infura.io/v3/your_project_id
POLYGON_RPC=https://polygon-rpc.com/
BSC_RPC=https://bsc-dataseed.binance.org/
ARBITRUM_RPC=https://arb1.arbitrum.io/rpc

# Безопасность
JWT_SECRET=your_32_character_secret_key_here_12345
ENCRYPTION_KEY=another_32_character_key_here_67890

# Лимиты сессий (опционально)
MAX_SESSIONS_PER_USER=3
MAX_TOTAL_SESSIONS=50
SESSION_TIMEOUT=1800000
